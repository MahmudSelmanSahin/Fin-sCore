@page
@model IndexModel
@{
    ViewData["Title"] = "İnteraktif Şube Girişi";
}

<div class="login_container">
    <div class="login_card">
        <div class="login_header">
            <div class="logo_container">
                <svg class="logo_icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <h1 class="login_title">İnteraktif Şube</h1>
            <p class="login_subtitle">Hoş geldiniz! Devam etmek için giriş yapın</p>
        </div>

        <form id="login_form" class="login_form" method="post">
            <div class="input_group">
                <label class="input_label">TC Kimlik No</label>
                <div class="input_wrapper">
                    <input type="text" 
                           id="tckno" 
                           name="tckno" 
                           class="form_input" 
                           placeholder="11 haneli TC Kimlik No"
                           maxlength="11"
                           autocomplete="off" />
                    <span class="input_icon">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16 7C16 9.20914 14.2091 11 12 11C9.79086 11 8 9.20914 8 7C8 4.79086 9.79086 3 12 3C14.2091 3 16 4.79086 16 7Z" stroke="currentColor" stroke-width="2"/>
                            <path d="M12 14C8.13401 14 5 17.134 5 21H19C19 17.134 15.866 14 12 14Z" stroke="currentColor" stroke-width="2"/>
                        </svg>
                    </span>
                </div>
                <span class="input_error" id="tckno_error"></span>
            </div>

            <div class="input_group">
                <label class="input_label">GSM Numarası</label>
                <div class="input_wrapper">
                    <input type="text" 
                           id="gsm" 
                           name="gsm" 
                           class="form_input" 
                           placeholder="05XX XXX XX XX"
                           maxlength="11"
                           autocomplete="off" />
                    <span class="input_icon">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M22 16.92V19.92C22 20.52 21.52 21 20.92 21H3.08C2.48 21 2 20.52 2 19.92V16.92" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M7 2H17V10H7V2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M12 14V16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </span>
                </div>
                <span class="input_error" id="gsm_error"></span>
            </div>

            <p class="login_info">TC Kimlik No veya GSM Numarası ile giriş yapabilirsiniz</p>

            @if (!Model.HasKvkkConsent)
            {
                <div class="kvkk_container">
                    <label class="kvkk_checkbox">
                        <input type="checkbox" id="kvkk_accept" name="kvkkAccept" required />
                        <span class="checkmark"></span>
                        <span class="kvkk_text">
                            <a href="#" class="kvkk_link">KVKK Aydınlatma Metni</a>'ni okudum, anladım ve kabul ediyorum.
                        </span>
                    </label>
                </div>
            }

            <button type="submit" class="btn_primary" id="login_btn">
                <span class="btn_text">Giriş Yap</span>
                <span class="btn_loader hidden">
                    <svg class="spinner" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none" opacity="0.25"/>
                        <path fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"/>
                    </svg>
                </span>
            </button>
        </form>

        <div class="login_footer">
            <p>Hesabınız yok mu? <a href="/SignUp" class="link_primary">Üye Ol</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var $tckno_input = $('#tckno');
            var $gsm_input = $('#gsm');
            var $login_form = $('#login_form');
            var $login_btn = $('#login_btn');

            console.log('Login form initialized');

            // TCKNO input formatting
            $tckno_input.on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length > 11) {
                    value = value.substring(0, 11);
                }
                $(this).val(value);
                if (value) {
                    clear_error('tckno');
                }
            });

            // GSM input formatting
            $gsm_input.on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length > 11) {
                    value = value.substring(0, 11);
                }
                $(this).val(value);
                if (value) {
                    clear_error('gsm');
                }
            });

            // Form submission
            $login_form.on('submit', function(e) {
                console.log('Form submit triggered');
                
                const tckno = $tckno_input.val();
                const gsm = $gsm_input.val();
                const kvkk_checkbox = $('#kvkk_accept');
                const kvkk_accepted = kvkk_checkbox.length === 0 || kvkk_checkbox.is(':checked');

                console.log('TCKNO:', tckno);
                console.log('GSM:', gsm);
                console.log('KVKK accepted:', kvkk_accepted);

                // Clear all errors first
                clear_error('tckno');
                clear_error('gsm');

                let is_valid = true;

                // At least one field must be filled
                if (!tckno && !gsm) {
                    e.preventDefault();
                    show_error('tckno', 'TC Kimlik No veya GSM Numarası giriniz');
                    show_error('gsm', 'TC Kimlik No veya GSM Numarası giriniz');
                    console.log('Validation failed: both empty');
                    return false;
                }

                // Validate TCKNO if provided
                if (tckno) {
                    if (tckno.length !== 11) {
                        show_error('tckno', 'TC Kimlik No 11 haneli olmalıdır');
                        is_valid = false;
                    }
                }

                // Validate GSM if provided
                if (gsm) {
                    if (gsm.length !== 11) {
                        show_error('gsm', 'GSM numarası 11 haneli olmalıdır');
                        is_valid = false;
                    } else if (!gsm.startsWith('05')) {
                        show_error('gsm', 'GSM numarası 05 ile başlamalıdır');
                        is_valid = false;
                    }
                }

                if (!kvkk_accepted) {
                    e.preventDefault();
                    show_error('tckno', 'KVKK metnini kabul etmelisiniz');
                    console.log('Validation failed: KVKK');
                    return false;
                }

                if (!is_valid) {
                    e.preventDefault();
                    console.log('Validation failed');
                    return false;
                }

                // Show loading state
                console.log('Showing loading state');
                $login_btn.addClass('loading');
                $login_btn.find('.btn_text').hide();
                $login_btn.find('.btn_loader').removeClass('hidden').show();
                $login_btn.prop('disabled', true);

                // Allow form to submit normally
                console.log('Form submitting to server...');
                return true;
            });

            function show_error(field_id, message) {
                $('#' + field_id + '_error').text(message).addClass('show');
                $('#' + field_id).addClass('error');
            }

            function clear_error(field_id) {
                $('#' + field_id + '_error').text('').removeClass('show');
                $('#' + field_id).removeClass('error');
            }
        });
    </script>
}
